<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Projects_Screen">

    <ListView
        android:id="@+id/noteView"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rowCounter1"
        android:layout_width="87dp"
        android:layout_height="46dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:focusable="true"
        android:onClick="count1"
        android:text="@string/counter"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteView" />

    <TextView
        android:id="@+id/rowCounter2"
        android:layout_width="87dp"
        android:layout_height="46dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:focusable="true"
        android:onClick="count2"
        android:text="@string/counter"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteView" />

    <TextView
        android:id="@+id/rowCounter3"
        android:layout_width="87dp"
        android:layout_height="46dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:focusable="true"
        android:onClick="count3"
        android:text="@string/counter"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteView" />

    <TextView
        android:id="@+id/rowCounter4"
        android:layout_width="87dp"
        android:layout_height="46dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:focusable="true"
        android:onClick="count4"
        android:text="@string/counter"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteView" />
</androidx.constraintlayout.widget.ConstraintLayout>
